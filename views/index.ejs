<%- include('partials/header') %>

<div class="container">
	<div class="hero-section fade-in">
		<h2><i class="fas fa-leaf me-2"></i>Welcome to TreeShop</h2>
		<p>
			Discover our collection of beautiful trees for your garden or indoor
			space. Each tree is carefully selected to bring nature's beauty into your
			life.
		</p>
		<a href="/add" class="btn btn-success btn-lg"
			><i class="fas fa-plus-circle me-2"></i>Add New Tree</a
		>
	</div>

	<% if (trees.length === 0) { %>
	<div class="empty-state fade-in">
		<i class="fas fa-seedling fa-4x text-success mb-3"></i>
		<h3>No trees found</h3>
		<p class="text-muted mb-4">
			Start growing your collection by adding some trees!
		</p>
		<a href="/add" class="btn btn-success"
			><i class="fas fa-plus-circle me-2"></i>Add Tree</a
		>
	</div>
	<% } else { %>
	<h2 class="mb-4"><i class="fas fa-th-large me-2"></i>Our Tree Collection</h2>
	<div class="row">
		<% trees.forEach((tree, index) => { %>
		<div
			class="col-md-4 col-sm-6 mb-4 fade-in"
			style="animation-delay: <%= index * 0.1 %>s">
			<div class="card h-100">
				<img
					src="<%= tree.image %>"
					class="card-img-top"
					alt="<%= tree.treename %>"
					onerror="this.src='/images/default-tree.jpg'" />
				<div class="card-body">
					<h5 class="card-title"><%= tree.treename %></h5>
					<p class="card-text">
						<%= tree.description.substring(0, 100) %><%= tree.description.length
						> 100 ? '...' : '' %>
					</p>
					<a href="/trees/<%= tree._id %>" class="btn btn-primary"
						><i class="fas fa-eye me-1"></i> View Details</a
					>
				</div>
			</div>
		</div>
		<% }) %>
	</div>
	<% } %>
</div>

<%- include('partials/footer') %>
